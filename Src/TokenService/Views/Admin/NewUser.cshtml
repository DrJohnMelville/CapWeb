@model TokenService.Controllers.Admin.NewUserModel

@{
    ViewBag.Title = "New User";
    Layout = "_Layout";
}

<div class="col-sm-6">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Create a New User</h3>
        </div>

        <partial name="_ValidationSummary" />

        <div class="panel-body">

            <form method="post">
                <fieldset>
                    <div class="form-group">
                        <label asp-for="FullName">Full Name</label>
                        <input class="form-control" placeholder="Name" asp-for="FullName" autofocus>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input class="form-control" placeholder="Email" asp-for="Email" type="email">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary" name="button" value="name">Create User</button>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>
